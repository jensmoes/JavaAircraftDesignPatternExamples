package Aircrafts;


public class Aircraft {

	private LandingGear mGear;
	private Empennage mTail;
	
	public void setGearComponent(LandingGear aGear) {
		mGear = aGear;
	}
	public void cycleGear(){
		if(mGear != null)
		{
			mGear.extend();
			mGear.retract();			
		}
	}
	public void stop(LandingGear aGear)
	{
		if(mGear != null)
			mGear.brake(true);
		aGear.brake(true);
		//Wait till we are stationary...
		if(mGear != null)
			mGear.brake(false);
		aGear.brake(false);
	}
}
